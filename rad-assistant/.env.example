# Radiology Assistant - Environment Variables Configuration

# --- LLM Providers ---
# "gemini" or "ollama"
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Required for Ollama (if provider=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# --- Database & Cache ---
# Local SQLite fallback: sqlite:///./rad_assistant.db
DATABASE_URL=postgresql://user:pass@localhost:5432/rad_assistant
REDIS_URL=redis://localhost:6379/0

# --- Security ---
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=long_random_secret_string_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# --- Observability ---
LOG_LEVEL=INFO
DEBUG=False
ENABLE_METRICS=True

# --- Application ---
MAX_RETRIES=3
RETRY_DELAY=1.0
